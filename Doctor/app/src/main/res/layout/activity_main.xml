<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#66CCFF"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textSize="24sp"
                android:text="医疗"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_vertical"/>

            <SearchView
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:background="#fff"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_marginRight="30dp"/>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/er_wei_ma"/>

                <TextView
                    android:layout_height="10dp"
                    android:layout_width="30dp"
                    android:text="扫一扫"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/xiaoxi"
                    android:id="@+id/imageView" />

                <TextView
                    android:layout_height="10dp"
                    android:layout_width="30dp"
                    android:text="消息"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>>
        </LinearLayout>
        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/viewFlipper">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/zhu3"
                    android:background="@drawable/zhu"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/zhu2"
                    android:background="@drawable/zhu2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/zhu"
                    android:background="@drawable/zhu3"/>
            </LinearLayout>
        </ViewFlipper>





        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F0F8FF"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b0b7af" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/wen"
                    android:background="@drawable/ask_doctor"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <!--android:background="@android:drawable/ic_menu_help"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="问医生"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#474e46"/>
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:background="#b0b7af"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/yuyue"
                    android:background="@drawable/yuyue"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="预约挂号"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#474e46"/>
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:background="#b0b7af"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView4"
                    android:background="@drawable/same_ill_circle"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="同病社区"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#474e46"/>
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:background="#b0b7af"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/wen1"
                    android:background="@drawable/library"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="名医讲堂"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#474e46"/>
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:background="#b0b7af"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/wen2"
                    android:background="@drawable/gong_lue"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />
                <!--android:background="@android:drawable/ic_menu_help"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="就医攻略"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#474e46"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F0F8FF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="名医讲堂"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#000000"
                    />
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:textColor="#000000"
                    android:text="《中风的前兆》"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:text="王琳医生"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>>
        </LinearLayout>>
    </LinearLayout>>






